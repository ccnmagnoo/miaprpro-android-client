<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <EditText
        android:id="@+id/name_editText_tramoOp"
        style="@style/app_bar_style_dark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Tramo básico" />

    <EditText
        android:id="@+id/base_editText_tramoOp"
        style="@style/app_bar_style_digit"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_ico_clock_24dp"
        android:ems="7"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_editText_tramoOp"
        tools:text="16" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:elevation="5dp"
        android:text="m³"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/base_editText_tramoOp"
        app:layout_constraintEnd_toEndOf="@+id/base_editText_tramoOp"
        app:layout_constraintTop_toTopOf="@+id/base_editText_tramoOp" />

    <EditText
        android:id="@+id/price_editText_tramoOp"
        style="@style/app_bar_style_digit"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/ic_ico_coin_20dp"
        android:ems="4"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.304"
        app:layout_constraintStart_toEndOf="@+id/base_editText_tramoOp"
        app:layout_constraintTop_toBottomOf="@+id/name_editText_tramoOp"
        tools:text="800" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:elevation="5dp"
        android:text="$ clp"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/price_editText_tramoOp"
        app:layout_constraintEnd_toEndOf="@+id/price_editText_tramoOp"
        app:layout_constraintTop_toTopOf="@+id/price_editText_tramoOp"
        app:layout_constraintVertical_bias="0.512" />

    <EditText
        android:id="@+id/password_editText_tramoOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:drawableStart="@android:drawable/ic_lock_idle_lock"
        android:ems="10"
        android:hint="verifique password"
        android:inputType="textPassword"
        android:minEms="6"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description_editText_tramoOp" />

    <EditText
        android:id="@+id/description_editText_tramoOp"
        style="@style/app_bar_style_light"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/app_draw_edittext_dark"
        android:drawableLeft="@drawable/ic_ico_baseline_edit_24"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:padding="8dp"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/name_editText_tramoOp"
        app:layout_constraintStart_toStartOf="@+id/name_editText_tramoOp"
        app:layout_constraintTop_toBottomOf="@+id/base_editText_tramoOp"
        tools:text="tramo de cobros intensivos por sobre 16 m3 de consumo del periodo" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/ok_button_tramoOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_editText_tramoOp"
        app:srcCompat="@drawable/ic_ico_add_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/cancel_button_tramoOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        app:backgroundTint="@color/purpleMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_editText_tramoOp"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/delete_flotaingButton_tramoOp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:clickable="true"
        android:visibility="gone"
        app:backgroundTint="@color/purpleMedium"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="@+id/name_editText_tramoOp"
        app:layout_constraintEnd_toEndOf="@+id/name_editText_tramoOp"
        app:layout_constraintTop_toTopOf="@+id/name_editText_tramoOp"
        app:srcCompat="@drawable/ic_delete_black_24dp"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>