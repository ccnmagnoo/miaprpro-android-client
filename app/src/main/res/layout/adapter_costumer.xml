<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/costumerAdapter_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grayUltraLight"
    android:elevation="5dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/grayUltraLight"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:contentPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/costumerPhone_textView_costumerAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="telÃ©fono"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/costumerEmail_textView_costumerAdapter"
                app:layout_constraintStart_toStartOf="@+id/costumerName_textView_costumerAdapter"
                app:layout_constraintTop_toBottomOf="@+id/costumerName_textView_costumerAdapter" />

            <TextView
                android:id="@+id/dateLastPay_textView_costumerAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lunes 20 abril 2020"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/costumerEmail_textView_costumerAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/medidorNumber_constrainLayout_consumptionAdapter"
                app:layout_constraintStart_toStartOf="@+id/costumerName_textView_costumerAdapter" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/medidorNumber_constrainLayout_consumptionAdapter"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/app_draw_container"
                android:minWidth="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/medidorNumber_textView_costumerAdapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/currentDebt_textView_costumerAparter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 10.000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/dateLastPay_textView_costumerAdapter"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/costumerName_textView_costumerAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="nombre"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/medidorNumber_constrainLayout_consumptionAdapter"
                app:layout_constraintTop_toTopOf="@+id/medidorNumber_constrainLayout_consumptionAdapter" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>