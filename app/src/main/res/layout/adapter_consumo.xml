<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/costumerAdapter_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grayUltraLight"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="5dp"
        app:cardBackgroundColor="@color/grayUltraLight"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:contentPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="mÂ³"
                app:layout_constraintBottom_toBottomOf="@+id/consumption_textView_consumptionAdapter"
                app:layout_constraintStart_toEndOf="@+id/consumption_textView_consumptionAdapter" />

            <TextView
                android:id="@+id/dateLectureNew_textView_consumptionAdapter"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:text="19/10/2019"
                android:textColor="@color/purpleMedium"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@+id/logNew_textView_consumptionAdapter"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/date_textView_consumptionAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="martes 31 octubre  2019"
                android:textAlignment="textEnd"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView14" />

            <TextView
                android:id="@+id/logOld_textView_consumptionAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9989.00"
                app:layout_constraintBottom_toBottomOf="@+id/logNew_textView_consumptionAdapter"
                app:layout_constraintStart_toStartOf="@+id/dateLectureOld_textView_consumptionAdapter" />

            <TextView
                android:id="@+id/consumption_textView_consumptionAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.55"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/logNew_textView_consumptionAdapter"
                app:layout_constraintStart_toStartOf="@+id/textView14" />

            <CheckBox
                android:id="@+id/payStatus_checkbox_ConsumptionAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:textColorHighlight="#4CAF50"
                android:textColorLink="#4CAF50"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/importe_textView_consumptionAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="$1,000"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView"
                app:layout_constraintEnd_toStartOf="@+id/payStatus_checkbox_ConsumptionAdapter" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/medidorNumber_constrainLayout_consumptionAdapter"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/app_draw_container"
                android:minWidth="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/medidorNumber_textView_consumptionAdapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="00"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Lectura anterior"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView10"
                app:layout_constraintStart_toEndOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Lectura actual"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/medidorNumber_constrainLayout_consumptionAdapter"
                app:layout_constraintTop_toTopOf="@+id/medidorNumber_constrainLayout_consumptionAdapter" />

            <TextView
                android:id="@+id/dateLectureOld_textView_consumptionAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19/09/2019"
                android:textColor="@color/purpleMedium"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/dateLectureNew_textView_consumptionAdapter"
                app:layout_constraintStart_toStartOf="@+id/textView9" />

            <TextView
                android:id="@+id/logNew_textView_consumptionAdapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999.55"
                app:layout_constraintBottom_toBottomOf="@+id/medidorNumber_constrainLayout_consumptionAdapter"
                app:layout_constraintStart_toStartOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Consumo"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/textView9"
                app:layout_constraintStart_toEndOf="@+id/textView9" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>