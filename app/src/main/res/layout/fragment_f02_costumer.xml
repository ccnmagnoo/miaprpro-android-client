<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".F02CostumerFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/costumers_recyclerView_costumer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addcostumer_floatingActionButton_costumer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="64dp"
            android:clickable="true"
            android:src="@drawable/ic_ico_addcostumer"
            app:backgroundTint="@color/purpleMedium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/numberOfCostumers_textView_costumer"
            style="@style/notification_red_textView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:elevation="7dp"
            android:padding="2dp"
            android:text="20"
            app:layout_constraintEnd_toEndOf="@+id/addcostumer_floatingActionButton_costumer"
            app:layout_constraintTop_toTopOf="@+id/addcostumer_floatingActionButton_costumer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>