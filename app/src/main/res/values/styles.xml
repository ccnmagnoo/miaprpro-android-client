<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purpleMedium</item>
        <item name="colorPrimaryDark">@color/purpleLight</item>
        <item name="colorAccent">@color/blueLight</item>
        <item name="android:textColorSecondary">@color/purpleMedium</item>
        <item name="colorControlNormal">@color/purpleLight</item>
 </style>
<!-- Estilo textView UI personalizado -->
    <style name="styleTextWhite" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <!-- Estilo barra textView UI personalizado_normal -->
    <style name="app_bar_style" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/app_draw_edittext</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:width">300dp</item>
    </style>
    <!-- Estilo barra textView UI personalizado light -->
    <style name="app_bar_style_light" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/app_draw_edittext_light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- Estilo barra textView UI personalizado dark -->
    <style name="app_bar_style_dark" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/app_draw_edittext_dark</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <!-- Estilo barra textView UI personalizado CIFRAS -->
    <style name="app_bar_style_digit" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/app_draw_edittext_digit</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <!-- Estilo barra editor textos UI notificador circulo ROJO -->
    <style name="notification_red_textView" parent="@style/Widget.AppCompat.TextView">
        <item name="android:background">@drawable/app_draw_redcircle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:minWidth">20dp</item>
    </style>

    <!-- Estilo BOTON UI personalizado -->
    <style name="app_button_style" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/app_draw_button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">10dp</item>
        <item name="android:width">300dp</item>
        <item name="android:radius">60dp</item>
    </style>

    <style name="AppThemeW" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purpleMedium</item>
        <item name="colorPrimaryDark">@color/purpleLight</item>
        <item name="colorAccent">@color/blueLight</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorControlNormal">#fff</item>
    </style>

</resources>
